<div class="row">
  <div class="col-xs-12 center-block">
    <center><h1>Eat-Da-Burger!</h1><img id="logoImg" src="assets/img/tigerburger.gif" alt=""></center>
  </div>
</div>
<div class="row"><div class="spaceholder"></div></row>
<div class="row">
  <div class="col-xs-12 col-md-8">
    <h3>Burger in your plate</h3>
    {{#each burgers}}
      {{#unless this.devoured}}
        <div class="row">
          <div class="col-xs-6 col-md-4">
            <p><strong>{{this.burger_name}}</strong></p>
          </div>
          <div class="col-xs-6 col-md-2">
            <form class="form-inline" action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button type="submit" class="btn btn-primary">devour</button>
            </form>
          </div>
        </div>
      {{/unless}}
    {{/each}}
  </div>
  <div class="col-xs-12 col-md-4">
    <h3>Burger devoured</h3>
    {{#each burgers}}
      {{#if this.devoured}}
        <p><strong>{{this.burger_name}}</strong></p>
      {{/if}}
    {{/each}}
  </div>
</div>

<h3>Add a burger</h3>
<form class="create-update-form" action="/" method="POST">
  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
